<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461</TargetFrameworks>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <DefineConstants>$(DefineConstants);</DefineConstants>
    <RootNamespace>crossql.mssqlserver</RootNamespace>
    <GenerateDocumentationFile Condition=" '$(Configuration)' == 'Release' ">true</GenerateDocumentationFile>
    <PackageId>crossql.mssqlserver</PackageId>
    <PackageTags>xamarin, windows, ios, android, netstandard, sql-server</PackageTags>
    <Title>crossql - A Cross Plataform ORM for MS SQL Server</Title>
    <AssemblyVersion>0.1.1.1</AssemblyVersion>
    <AssemblyFileVersion>0.1.1.1</AssemblyFileVersion>
    <Version>0.1.1.1</Version>
    <PackageVersion>0.1.1.1</PackageVersion>
    <PackOnBuild>true</PackOnBuild>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\crossql\crossql.csproj" />
  </ItemGroup>
    
    <!-- Eventually we want netcoreapp2.0
  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
    <PackageReference Include="System.Data.SqlClient" Version="4.3.0" />
  </ItemGroup> -->
</Project>